{
  "plugins": ["@shufo/prettier-plugin-blade"],
  "overrides": [
    {
      "files": ["*.blade.php"],
      "options": {
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true,
        "wrapAttributes": "force-expand-multiline",
        "sortTailwindcssClasses": true,
        "sortHtmlAttributes": "code-guide",
        "parser": "blade"
      }
    },
    {
      "files": ["*.js", "*.css"],
      "options": {
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true,
        "wrapAttributes": "force-expand-multiline"
      }
    },
    {
        "files": ["*.json"],
        "options": {
          "tabWidth": 4
        }
      }
  ]
}
